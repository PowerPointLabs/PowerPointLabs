<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Theme.Background is the default background colour of a Pane in PPT. -->
    <Color x:Key="Theme.Background">#FF1E1E1E</Color>
    <Color x:Key="Theme.Background2">#FF363636</Color>
    <Color x:Key="Theme.Background3">#FF5A5A5A</Color>
    
    <Color x:Key="Theme.Foreground">#FFEEEEEE</Color>

    <SolidColorBrush x:Key="Theme.BackgroundBrush" Color="{StaticResource Theme.Background}"/>
    <SolidColorBrush x:Key="Theme.BackgroundBrush2" Color="{StaticResource Theme.Background2}"/>
    <SolidColorBrush x:Key="Theme.BackgroundBrush3" Color="{StaticResource Theme.Background3}"/>

    <SolidColorBrush x:Key="Theme.ForegroundBrush" Color="{StaticResource Theme.Foreground}"/>

</ResourceDictionary> 