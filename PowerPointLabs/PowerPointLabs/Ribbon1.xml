              onAction="NameEditBtnClick"/>
      <button id="fitToWidthTable"
              label="Fit To Width"
              getImage="GetFitToWidthImage"
              onAction="FitToWidthClick"/>
      <button id="fitToHeightTable"
              label="Fit To Height"
              getImage="GetFitToHeightImage"
