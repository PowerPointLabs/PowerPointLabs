      <menuSeparator id="separatorShapes"/>
      <button id="contextReplaceAudio"
              label="Replace Audio"
              imageMso="NoAudioStyle"
              onAction="ContextReplaceAudioClick"/>
    </contextMenu>
  </contextMenus>
</customUI>

