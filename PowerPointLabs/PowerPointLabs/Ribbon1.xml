<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <contextualTabs>
      <tabSet idMso="TabSetDrawingTools">
        <tab idMso="TabDrawingToolsFormat">
          <group id="AdditionalFeatures"
                 label="Other"
                 insertBeforeMso="GroupShapeStyles"
                 getVisible="GetVisibilityForCombineShapes">
            <menu idMso="CombineShapesMenu"
                  label="Combine Shapes"
                  size="large"
                  getVisible="GetVisibilityForCombineShapes" />
          </group>
        </tab>
      </tabSet>
    </contextualTabs> 
    <tabs>
      <tab id="PowerPointLabsAddIns" label="PowerPointLabs">
        <group id="AutoMotionGroup"
               label="Auto Animate"
               visible ="true">
          <button id="AddAnimationButton"
                  label="Add Animation Slide"
                  size="large"
                  getImage="GetAddAnimationImage"
                  supertip="Adds a slide with animations to create an animated transition from the currently selected slide to the next slide."
                  getEnabled="OnGetEnabledAddAutoMotion"
                  onAction="AddAnimationButtonClick"/>
          <button id="ReloadButton"
                  label ="Recreate Animation"
                  size ="large"
                  getImage="GetReloadAnimationImage"
                  supertip="Recreates an existing animation slide with new animations.&#13;&#13;To activate, select the original slide or the animation slide (added previously) and click this button."
                  getEnabled="OnGetEnabledReloadAutoMotion"
                  onAction="ReloadButtonClick"/>
          <button id="InSlideAnimateButton"
                   label="Animate In Slide"
                   size="large"
                   getImage="GetInSlideAnimationImage"
                   supertip="Moves a shape around the slide in multiple steps.&#13;&#13;To activate, copy the shape to locations where you want it to stop, select the copies in the order you want them to appear, and click this button"
                   getEnabled="OnGetEnabledAddInSlide"
                   onAction="AddInSlideAnimationButtonClick"/>
          <dialogBoxLauncher>
            <button id ="AutoAnimateDialogBox"
                    onAction="AutoAnimateDialogButtonPressed"/>
          </dialogBoxLauncher>

        </group>
        <group id="AutoZoomGroup"
               label="Auto Zoom" visible ="true">
          <button id="AddZoomInButton"
                 label ="Drill Down"
                 size ="large"
                 getImage="GetZoomInImage"
                 supertip="Adds a slide with animations to create a zoom-in effect from the currently selected shape to the next slide.&#13;&#13;To activate, select a rectangle shape on the slide that you want to drill down from and click on this button."
                 getEnabled="OnGetEnabledZoomButton"
                 onAction="AddZoomInButtonClick"/>
          <button id="AddZoomOutButton"
                 label ="Step Back"
                 size ="large"
                 getImage="GetZoomOutImage"
                 supertip="Adds a slide with animations to create a zoom-out effect from the previous slide to the currently selected shape.&#13;&#13;To activate, select a rectangle shape on the slide that you want to step back to and click on this button."
                 getEnabled="OnGetEnabledZoomButton"
                 onAction="AddZoomOutButtonClick"/>
          <button id="ZoomToAreaButton"
                 label ="Zoom To Area"
                 size ="large"
                 getImage="GetZoomToAreaImage"
                 supertip="Zoom into an area of a slide or image.&#13;&#13;To activate, place a rectangle shape on the portion that you want to magnify and click on this button.&#13;&#13;This feature works best with high-resolution images."
                 getEnabled="OnGetEnabledZoomButton"
                 onAction="ZoomBtnClick"/>
          <dialogBoxLauncher>
            <button id ="AutoZoomDialogBox"
                    onAction="AutoZoomDialogButtonPressed"/>
          </dialogBoxLauncher>
        </group>
        <group id="AutoCropGroup"
               label="Auto Crop"
               visible="true">
          <button id="MoveCropShapeButton"
                  label ="Crop To Shape"
                  size ="large"
                  getImage="GetCropShapeImage"
                  supertip="Crop a picture according to your selected shape(s).&#13;&#13;To activate, draw a shape upon the picture you want to crop, select the shape, and then click on this button."
                  onAction="CropShapeButtonClick"/>
        </group>
        <group id="SpotLightGroup"
               label="Spotlight"
               visible="true">
          <button   id="AddSpotlightButton"
                   label="Create Spotlight"
                   size="large"
                   supertip="Creates a spotlight effect for a selected shape.&#13;&#13;To activate, draw a shape to match the spotlight you want, select the shape, and click this button."
                   getImage="GetSpotlightImage"
                   getEnabled="OnGetEnabledSpotlight"
                   onAction="SpotlightBtnClick"/>
          <button id="ReloadSpotlightButton"
                  label ="Recreate Spotlight"
                  size ="large"
                  supertip="Adjusts the transparency and edges of an existing spotlight.&#13;&#13;To activate, set the transparency level and soft edges width, select the existing spotlight shape, and click this button."
                  getImage="GetReloadSpotlightImage"
                  getEnabled="OnGetEnabledReloadSpotlight"
                  onAction="ReloadSpotlightButtonClick"/>
          <dialogBoxLauncher>
            <button id ="SpotlightDialogBox"
                    onAction="SpotlightDialogButtonPressed"/>
          </dialogBoxLauncher>
        </group>
        <group id="embedAudio"
               label="Auto Narrate"
               >
          <splitButton id="addAudioSplit" size="large">
            <button id="addAudio"
                  label="Add Audio"
                  onAction="AddAudioClick"
                  keytip="NA"
                  supertip="Generates synthesized audio from text in the Speaker Notes pane, and adds it to the slide(s).&#13;&#13;To add audios for multiple slides, select the slides first (e.g. Ctrl+A to select all slides, Ctrl+click to select only some slides) before clicking the 'Add Audio' button."
                  getImage="GetAddAudioImage" />
            <menu id="menu">
              <button id="generateRecord"
                      label="Generate Audio Automatically"
                      onAction="AddAudioClick"
                      keytip="NA"
                      supertip="Generates synthesized audio from text in the Speaker Notes pane, and adds it to the slide(s)."/>
              <button id="addRecord"
                      label="Record Audio Manually"
                      onAction="RecManagementClick"
                      keytip="NA"
                      supertip="Use this option to record audio manually to replace the generated audio."/>
            </menu>
          </splitButton>
          <button id="removeAudio"
                  label="Remove Audio"
                  onAction="RemoveAudioClick"
                  supertip="Removes any generated audio that was added using Auto Narrate from the slide(s).&#13;&#13;To remove audios for multiple slides, select the slides first (e.g. Ctrl+A to select all slides, Ctrl+click to select only some slides) before clicking the 'Remove Audio' button."
                  keytip="NR"
                  getEnabled="OnGetEnabledRemoveAudio"
                  getImage="GetRemoveAudioImage"
                  size="large" />
          <dialogBoxLauncher>
            <button id="AutoNarrateDialogBox"
                    onAction="AutoNarrateDialogButtonPressed"/>
          </dialogBoxLauncher>
        </group>
        <group id="embedCaptions" label="Auto Captions">
          <button id="addCaptions"
                  label="Add Captions"
                  keytip="CA"
                  supertip="Generates movie-style subtitles from text in the Speaker Notes pane, and adds it to the slide(s).&#13;&#13;To add captions for multiple slides, select the slides first (e.g. Ctrl+A to select all slides, Ctrl+click to select only some slides) before clicking the 'Add Captions' button."
                  onAction="AddCaptionClick"
                  getImage="GetAddCaptionsImage"
                  size="large" />
          <button id="removeCaptions"
                  label="Remove Captions"
                  keytip="CR"
                  supertip="Removes any captions that were added using Auto Captions from the slide(s).&#13;&#13;To remove captions for multiple slides, select the slides first (e.g. Ctrl+A to select all slides, Ctrl+click to select only some slides) before clicking the 'Remove Captions' button."
                  onAction="RemoveCaptionClick"
                  getImage="GetRemoveCaptionsImage"
                  getEnabled="OnGetEnabledRemoveCaptions"
                  size="large" />
        </group>
        <group id="HighlightBullets"
               label="Highlight Bullets"
               visible="true">
          <button id="HighlightBulletsTextButton"
                 label ="Highlight Text"
                 size ="large"
                 getImage="GetHighlightBulletsTextImage"
                 supertip="Highlights all the bullet points on the specified slide by changing the text color."
                 getEnabled="OnGetEnabledHighlightBullets"
                 onAction="HighlightBulletsTextButtonClick"/>
          <button id="HighlightBulletsBackgroundButton"
                 label ="Highlight Background"
                 size ="large"
                 getImage="GetHighlightBulletsBackgroundImage"
                 supertip="Highlights all the bullet points on the specified slide by highlighting the text background"
                 getEnabled="OnGetEnabledHighlightBullets"
                 onAction="HighlightBulletsBackgroundButtonClick"/>
          <dialogBoxLauncher>
            <button id="HighlightBulletsDialogBox"
                    onAction="HighlightBulletsDialogBoxPressed"/>
          </dialogBoxLauncher>
        </group>
        <group id="Color"
               label="Color"
               visible="true">
          <button id="ColorPickerButton"
                  label="Color Picker"
                  size="large"
                  supertip="Opens Custom Color Picker"
                  onAction="ColorPickerButtonClick"/>
        </group>
        <group id="CustomShape"
               label="Custom Shapes"
               visible="true">
          <button id="CustomeShapeButton"
                  label="Shape Lab"
                  size="large"
                  supertip="Manage your custom shapes on the fly."
                  onAction="CustomShapeButtonClick"/>
        </group>
        <group id="PPTLabsHelp"
               label="Help"
               visible="true">
          <button id="HelpButton"
                  label="Help"
                  size="large"
                  getImage="GetHelpImage"
                  supertip="Click this to visit PowerPointLabs help page in our website."
                  onAction="HelpButtonClick"/>
          <button id="FeedbackButton"
                  label="Report Issues/ Send Feedback"
                  size="large"
                  getImage="GetFeedbackImage"
                  supertip="Click this to email us problem reports or other feedback. "
                  onAction="FeedbackButtonClick"/>
          <button id="aboutButton"
                  label="About"
                  size="large"
                  getImage="GetAboutImage"
                  supertip="Information about the PowerPointLabs plugin."
                  onAction="AboutButtonClick"/>
        </group>
      </tab>
    </tabs>
  </ribbon>
