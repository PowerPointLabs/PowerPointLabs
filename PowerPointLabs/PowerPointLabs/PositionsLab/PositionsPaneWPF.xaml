<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:WPF="clr-namespace:PowerPointLabs.WPF" x:Class="PowerPointLabs.PositionsLab.PositionsPaneWpf"
             mc:Ignorable="d" Height="650" Width="310">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/baselight.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer Margin="0,0,0,-20">
        <Grid VerticalAlignment="Top" Height="640">
            <GroupBox x:Name="alignGroupBox" Header="Align" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Height="130" Width="284">
                <WPF:ImageButton ToolTip="Opens the settings for Distribute functions" x:Name="alignSettingsButton" HorizontalAlignment="Right" Margin="0,-29,-2,0" VerticalAlignment="Top" Width="20" Height="20" Click="AlignSettingsButton_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                    <Image Source="..\Resources\SettingsGear.png"/>
                </WPF:ImageButton>
            </GroupBox>
            <Button ToolTip="Aligns objects to the left axis of reference object" x:Name="alignLeftButton" Content="Left" HorizontalAlignment="Left" Margin="24,37,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AlignLeftButton_Click"/>
            <Button ToolTip="Aligns objects to the right axis of reference object" x:Name="alignRightButton" Content="Right" HorizontalAlignment="Left" Margin="89,37,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AlignRightButton_Click"/>
            <Button ToolTip="Aligns objects to the top axis of reference object" x:Name="alignTopButton" Content="Top" HorizontalAlignment="Left" Margin="154,37,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AlignTopButton_Click"/>
            <Button ToolTip="Aligns objects to the bottom axis of reference object" x:Name="alignBottomButton" Content="Bottom" HorizontalAlignment="Left" Margin="219,37,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AlignBottomButton_Click"/>
            <Button ToolTip="Aligns objects to the middle axis of reference object" x:Name="alignMiddleButton" Content="Middle" HorizontalAlignment="Left" Margin="24,87,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AlignMiddleButton_Click"/>
            <Button ToolTip="Aligns objects to the center of reference object" x:Name="alignCenterButton" Content="Center" HorizontalAlignment="Left" Margin="89,87,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AlignCenterButton_Click"/>
            <GroupBox x:Name="adjoinGroupBox" Header="Adjoin" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top" Height="80" Width="284"/>
            <Button ToolTip="Adjoin objects to the a single horizontal line alongside reference object" x:Name="adjoinHorizontalButton" Content="Horizontal" HorizontalAlignment="Left" Margin="24,171,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AdjoinHorizontalButton_Click"/>
            <Button ToolTip="Adjoin objects to the a single vertical line alongside reference object" x:Name="adjoinVerticalButton" Content="Vertical" HorizontalAlignment="Left" Margin="89,171,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AdjoinVerticalButton_Click"/>
            <GroupBox x:Name="distributeGroupBox" Header="Distribute" HorizontalAlignment="Left" Margin="10,225,0,0" VerticalAlignment="Top" Height="130" Width="284">
                <WPF:ImageButton ToolTip="Opens the settings for Distribute functions" x:Name="distributeSettingsButton" HorizontalAlignment="Right" Margin="0,-29,-3,0" VerticalAlignment="Top" Width="20" Height="20" Click="DistributeSettingsButton_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                    <Image Source="..\Resources\SettingsGear.png"/>
                </WPF:ImageButton>
            </GroupBox>
            <Button ToolTip="Equalize horizontal spaces of objects within reference frame" x:Name="distributeHorizontalButton" Content="Horizontal" HorizontalAlignment="Left" Margin="24,256,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="DistributeHorizontalButton_Click"/>
            <Button ToolTip="Equalize vertical spaces of objects within reference frame" x:Name="distributeVerticalButton" Content="Vertical" HorizontalAlignment="Left" Margin="89,256,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="DistributeVerticalButton_Click"/>
            <Button ToolTip="Equalize horizontal and vertical spaces of objects within reference frame" x:Name="distributeCenterButton" Content="Center" HorizontalAlignment="Left" Margin="154,256,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="DistributeCenterButton_Click"/>
            <Button ToolTip="Equalize horizontal and vertical spaces of objects amongst selected objects" x:Name="distributeShapesButton" Content="Shapes" HorizontalAlignment="Left" Margin="219,256,0,0" VerticalAlignment="Top" Width="60" Height="45" Click ="DistributeShapesButton_Click"/>
            <Button ToolTip="Equalize spaces of objects into a grid" x:Name="distributeGridButton" Content="Grid" HorizontalAlignment="Left" Margin="24,306,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="DistributeGridButton_Click"/>
            <Button ToolTip="Distribute objects along the edge of reference frame" x:Name="distributeAlongEdgeButton" Content="Edges" HorizontalAlignment="Left" Margin="24,306,0,0" VerticalAlignment="Top" Width="60" Height="45" Visibility="Hidden"/>
            <GroupBox x:Name="reorderGroupBox" Header="Reorder" HorizontalAlignment="Left" Margin="10,357,0,0" VerticalAlignment="Top" Height="80" Width="284">
                <WPF:ImageButton Visibility="Hidden" ToolTip="Opens the settings for Reorder functions" x:Name="reorderSettingsButton" HorizontalAlignment="Right" Margin="0,-29,-3,0" VerticalAlignment="Top" Width="20" Height="20" Click="ReorderSettingsButton_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                    <Image Source="..\Resources\SettingsGear.png"/>
                </WPF:ImageButton>
            </GroupBox>
            <Button ToolTip="Swaps the positions of objects in a cyclical order" x:Name="swapPositionsButton" Content="Swap" HorizontalAlignment="Left" Margin="24,387,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="SwapPositionsButton_Click"/>
            <GroupBox x:Name="adjustmentGroupBox" Header="Adjustment" HorizontalAlignment="Left" Margin="10,441,0,0" VerticalAlignment="Top" Height="80" Width="284"/>
            <Button ToolTip="Adjusts the rate of rotation for object" x:Name="rotationButton" Content="Rotation" HorizontalAlignment="Left" Margin="24,472,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="RotationButton_Click"/>
            <CheckBox x:Name="LockAxisCheckBox" Content="Lock Axis" HorizontalAlignment="Left" Height="33" Margin="94,475,0,0" VerticalAlignment="Top" Checked="LockAxis_Checked" Unchecked="LockAxis_UnChecked"/>
            <GroupBox x:Name="snapGroupBox" Header="Snap" HorizontalAlignment="Left" Margin="10,525,0,0" VerticalAlignment="Top" Height="80" Width="284"/>
            <Button ToolTip="Snaps object to a horizontal rotation" x:Name="snapHorizontalButton" Content="Horizontal" HorizontalAlignment="Left" Margin="24,557,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="SnapHorizontalButton_Click"/>
            <Button ToolTip="Snaps object to a vertical rotation" x:Name="snapVerticalButton" Content="Vertical" HorizontalAlignment="Left" Margin="89,557,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="SnapVerticalButton_Click"/>
            <Button ToolTip="Snaps object to a vertical rotation" x:Name="snapAwayButton" Content="Away" HorizontalAlignment="Left" Margin="154,557,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="SnapAwayButton_Click"/>
        </Grid>
    </ScrollViewer>
</UserControl>
