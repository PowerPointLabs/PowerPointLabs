<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:WPF="clr-namespace:PowerPointLabs.WPF" x:Class="PowerPointLabs.PositionsLab.PositionsPaneWpf"
             mc:Ignorable="d" Height="540" Width="310"
             KeyDown="PositionsPane_KeyDown" KeyUp="PositionsPane_KeyUp" FocusVisualStyle="{x:Null}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Steel.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/baselight.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding Key="LeftCtrl"/>
    </UserControl.InputBindings>
    <ScrollViewer Margin="0,0,0,-20">
        <Grid VerticalAlignment="Top" Height="540" Width="300">
            <GroupBox x:Name="alignGroupBox" Header="Align" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Height="130" Width="280">
                <WPF:ImageButton ToolTip="Opens the settings for Distribute functions" x:Name="alignSettingsButton" HorizontalAlignment="Right" Margin="0,-29,-2,0" VerticalAlignment="Top" Width="20" Height="20" Click="AlignSettingsButton_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                    <Image Source="..\Resources\SettingsGear.png"/>
                </WPF:ImageButton>
            </GroupBox>
            <WPF:ImageButton ToolTip="Aligns objects to the left axis of reference object" x:Name="alignLeftButton"  HorizontalAlignment="Left" Margin="18,35,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AlignLeftButton_Click" MouseEnter="AlignLeftButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\AlignLeftIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Aligns objects to the right axis of reference object" x:Name="alignRightButton" HorizontalAlignment="Left" Margin="86,35,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AlignRightButton_Click" MouseEnter="AlignRightButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\AlignRightIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Aligns objects to the top axis of reference object" x:Name="alignTopButton" HorizontalAlignment="Left" Margin="154,35,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AlignTopButton_Click" MouseEnter="AlignTopButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\AlignTopIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Aligns objects to the bottom axis of reference object" x:Name="alignBottomButton" HorizontalAlignment="Left" Margin="222,35,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AlignBottomButton_Click" MouseEnter="AlignBottomButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\AlignBottomIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Aligns objects to the horizontal center of reference object" x:Name="alignHorizontalCenterButton"  HorizontalAlignment="Left" Margin="18,85,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AlignHorizontalCenterButton_Click" MouseEnter="AlignHorizontalCenterButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\AlignHorizontalCenterIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Aligns objects to the vertical center of reference object" x:Name="alignVerticalCenterButton" HorizontalAlignment="Left" Margin="86,85,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AlignVerticalCenterButton_Click" MouseEnter="AlignVerticalCenterButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\AlignVerticalCenterIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Aligns objects to the center of reference object" x:Name="alignCenterButton" HorizontalAlignment="Left" Margin="154,85,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AlignCenterButton_Click" MouseEnter="AlignCenterButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\AlignCenterIcon.png"/>
            </WPF:ImageButton>
            <GroupBox x:Name="adjoinGroupBox" Header="Adjoin" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top" Height="80" Width="280"/>
            <WPF:ImageButton ToolTip="Adjoin objects horizontally to the reference object" x:Name="adjoinHorizontalButton" HorizontalAlignment="Left" Margin="18,170,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AdjoinHorizontalButton_Click" MouseEnter="AdjoinHorizontalButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\AdjoinHorizontalIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Adjoin objects horizontally to the reference object and aligns them horizontal" x:Name="adjoinHorizontalWithAlignButton" HorizontalAlignment="Left" Margin="86,170,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AdjoinHorizontalWithAlignButton_Click" MouseEnter="AdjoinHorizontalWithAlignButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\AdjoinHorizontalWithAlignIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Adjoin objects vertically to the reference object" x:Name="adjoinVerticalButton" HorizontalAlignment="Left" Margin="154,170,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AdjoinVerticalButton_Click" MouseEnter="AdjoinVerticalButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\AdjoinVerticalIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Adjoin objects vertically to the reference object and aligns them vertically" x:Name="adjoinVerticalWithAlignButton" HorizontalAlignment="Left" Margin="222,170,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="AdjoinVerticalWithAlignButton_Click" MouseEnter="AdjoinVerticalWithAlignButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\AdjoinVerticalWithAlignIcon.png"/>
            </WPF:ImageButton>
            <GroupBox x:Name="distributeGroupBox" Header="Distribute" HorizontalAlignment="Left" Margin="10,225,0,0" VerticalAlignment="Top" Height="80" Width="280">
                <WPF:ImageButton ToolTip="Opens the settings for Distribute functions" x:Name="distributeSettingsButton" HorizontalAlignment="Right" Margin="0,-29,-3,0" VerticalAlignment="Top" Width="20" Height="20" Click="DistributeSettingsButton_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                    <Image Source="..\Resources\SettingsGear.png"/>
                </WPF:ImageButton>
            </GroupBox>
            <WPF:ImageButton ToolTip="Equalize horizontal spaces of objects within reference frame" x:Name="distributeHorizontalButton" HorizontalAlignment="Left" Margin="18,255,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="DistributeHorizontalButton_Click" MouseEnter="DistributeHorizontalButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\DistributeHorizontalIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Equalize vertical spaces of objects within reference frame" x:Name="distributeVerticalButton" HorizontalAlignment="Left" Margin="86,255,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="DistributeVerticalButton_Click" MouseEnter="DistributeVerticalButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\DistributeVerticalIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Equalize horizontal and vertical spaces of objects within reference frame" x:Name="distributeCenterButton" HorizontalAlignment="Left" Margin="154,255,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="DistributeCenterButton_Click" MouseEnter="DistributeCenterButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\DistributeCenterIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Equalize spaces of objects into a grid" x:Name="distributeGridButton" HorizontalAlignment="Left" Margin="222,255,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="DistributeGridButton_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\DistributeGridIcon.png"/>
            </WPF:ImageButton>
            <Button ToolTip="Distribute objects along the edge of reference frame" x:Name="distributeAlongEdgeButton" Content="Edges" HorizontalAlignment="Left" Margin="18,255,0,0" VerticalAlignment="Top" Width="60" Height="45" Visibility="Hidden"/>
            <GroupBox x:Name="reorderGroupBox" Header="Reorder" HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" Height="80" Width="280">
                <WPF:ImageButton ToolTip="Opens the settings for Reorder functions" x:Name="reorderSettingsButton" HorizontalAlignment="Right" Margin="0,-29,-3,0" VerticalAlignment="Top" Width="20" Height="20" Click="ReorderSettingsButton_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                    <Image Source="..\Resources\SettingsGear.png"/>
                </WPF:ImageButton>
            </GroupBox>
            <WPF:ImageButton ToolTip="Swaps the positions of objects in a cyclical order" x:Name="swapPositionsButton" HorizontalAlignment="Left" Margin="18,340,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="SwapPositionsButton_Click" MouseEnter="SwapPositionsButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\SwapIcon.png"/>
            </WPF:ImageButton>
            <GroupBox x:Name="orientationGroupBox" Header="Reorientate" HorizontalAlignment="Left" Margin="10,395,0,0" VerticalAlignment="Top" Height="130" Width="280"/>
            <WPF:ImageButton ToolTip="Adjusts the rate of rotation for object" x:Name="rotationButton" HorizontalAlignment="Left" Margin="18,425,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="RotationButton_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\RotateIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Snaps object to a horizontal rotation" x:Name="snapHorizontalButton" HorizontalAlignment="Left" Margin="86,425,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="SnapHorizontalButton_Click" MouseEnter="SnapHorizontalButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\SnapHorizontalIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Snaps object to a vertical rotation" x:Name="snapVerticalButton" HorizontalAlignment="Left" Margin="154,425,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="SnapVerticalButton_Click" MouseEnter="SnapVerticalButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\SnapVerticalIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Snaps objects away from a reference object" x:Name="snapAwayButton" HorizontalAlignment="Left" Margin="222,425,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="SnapAwayButton_Click" MouseEnter="SnapAwayButton_MouseEnter" MouseLeave="UndoPreview" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\SnapAwayIcon.png"/>
            </WPF:ImageButton>
            <WPF:ImageButton ToolTip="Objects can only be moved horizontally or vertically from original position" x:Name="lockAxisButton" HorizontalAlignment="Left" Margin="18,472,0,0" VerticalAlignment="Top" Width="60" Height="45" Click="LockAxisButton_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="..\Resources\PositionsLab\LockAxisIcon.png"/>
            </WPF:ImageButton>
        </Grid>
    </ScrollViewer>
</UserControl>
